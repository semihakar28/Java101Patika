package Döngüler;

import java.util.Scanner;

public class Pratik5 {

    public static void main(String[] args) {
        Scanner input = new Scanner(System.in);
        int num,total=0,value;

        System.out.print("Bir Sayı Girin:");
        num = input.nextInt();

        while(num != 0){
            value=num % 10;
            total+=value;
            num /= 10;
        }
        System.out.println("Girilen Sayının Rakamların Toplamı = "+total);
    }